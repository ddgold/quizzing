		"@types/node": "^14.14.34",
		"@types/uuid": "^8.3.0",
		"nodemon": "^2.0.7",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.3"
	},
	"dependencies": {
		"apollo-server-express": "^2.21.1",
		"bcryptjs": "^2.4.3",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"graphql": "^15.5.0",
		"graphql-import-node": "^0.0.4",
		"graphql-redis-subscriptions": "^2.3.1",
		"ioredis": "^4.24.5",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.12.0",
		"uuid": "^8.3.2"
	},
	"scripts": {
		"dev": "nodemon ./src/server.ts",
		"remove-build": "rm -rf ./build",
		"build": "yarn run remove-build && tsc -p ./tsconfig.json && cp ./src/graphql/schema.graphql ./build/graphql/schema.graphql",
		"reset-database": "yarn run drop-collections all && yarn run create-dummy-data boards",
		"create-dummy-data": "ts-node ./src/scripts/createDummyData.ts",
		"drop-collections": "ts-node ./src/scripts/dropCollections.ts",
		"scrap": "ts-node ./src/scripts/scrap.ts",
		"kill-port": "lsof -ti:8000 | xargs kill"
	}
}
